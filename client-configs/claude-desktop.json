{
  "mcpServers": {
    "mountvacation": {
      "command": "python",
      "args": ["path/to/python-fastmcp/mountvacation_mcp.py"],
      "env": {
        "MOUNTVACATION_USERNAME": "your_username_here",
        "MOUNTVACATION_PASSWORD": "your_password_here"
      }
    }
  }
}

